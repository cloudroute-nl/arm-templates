{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "sql-server-name": {
            "type": "string"
        },
        "sql-login": {
            "type": "string"
        },
        "sql-login-password": {
            "type": "securestring"
        },
        "sql-server-api-version" : {
            "type": "string",
            "defaultValue": "2015-05-01-preview"
        },
        "location" : {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        }
       
    },
    "resources": [
        {
            "type": "Microsoft.Sql/servers",
            "apiVersion": "[paramameters('sql-server-api-version')]",
            "name": "[parameters('sql-server-name')]",
            "location": "[parameters('location')]",
            "properties": {
                "administratorLogin": "[parameters('sql-login')]",
                "administratorLoginPassword": "[parameters('sql-login-password')]",
                "version": "12.0"
            }
        }
    ]
}