{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtual-machine-name": {
            "type": "string"
        },
        "virtual-machine-size": {
            "type": "string"
        },
        "virtual-machine-nic-name" : {
            "type": "string"
        },
        "virtual-machine-username": {
            "type": "string"
        },
        "virtual-machine-password": {
            "type": "string"
        },
        "virtual-machine-api-version": {
            "type": "string",
            "defaultValue": "2019-07-01"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        }
    },
    "variables": {
        "osdiskname": "[concat(parameters('virtual-machine-name'), '-osdisk')]",
        "vmSubnetRef": "[concat(variables('vnetId'), '/subnets/virtual-machines')]"
    },
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "[parameters('virtual-machine-api-version')]",
            "name": "[parameters('virtual-machine-name')]",
            "location": "[parameters('location')]",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('virtual-machine-size')]"
                },
                "storageProfile": {
                    "osDisk": {
                        "createOption": "FromImage",
                        "name": "[variables('osdiskname')]",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        }
                    },
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2019-Datacenter",
                        "version": "latest"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('virtual-machine-nic-name'))]"
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "[parameters('virtual-machine-name')]",
                    "adminUsername": "[parameters('virtual-machine-username')]",
                    "adminPassword": "[parameters('virtual-machine-password')]",
                    "windowsConfiguration": {
                        "provisionVmAgent": true
                    }
                }
            }
            /*,
            "resources": [
                {
                    "type": "extensions",
                    "apiVersion": "2019-03-01",
                    "name": "CreateADForest",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[parameters('vm-name')]"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Powershell",
                        "type": "DSC",
                        "typeHandlerVersion": "2.19",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "ModulesUrl": "[uri(parameters('_artifactsLocation'), concat('DSC/ADS.zip', parameters('_artifactsLocationSasToken')))]",
                            "ConfigurationFunction": "ADS.ps1\\ADS",
                            "Properties": {
                                "DomainName": "[parameters('domain-name')]",
                                "SqlEndPoint": "10.0.2.4",
                                "AdminCreds": {
                                    "UserName": "[parameters('vm-login')]",
                                    "Password": "PrivateSettingsRef:AdminPassword"
                                }
                            }
                        },
                        "protectedSettings": {
                            "Items": {
                                "AdminPassword": "[parameters('vm-login-password')]"
                            }
                        }
                    }
                }
            ]
            */
        }
    ]
}